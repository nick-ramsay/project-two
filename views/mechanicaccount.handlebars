<div class="container">
    <div class="row">
        <form class="mx-auto bg-white p-5 rounded mt-5 mb-5" id="updateAccountForm" data-accountID=12>
            <div class="form-group">
                <label for="updateMechanicShopName">Shop Name</label>
                <input type="text" class="form-control" id="updateMechanicShopName"
                    placeholder="What's the name of your shop?">
            </div>
            <div class="form-group">
                <label for="updateMechanicCount">Number of Mechanics</label>
                <input type="number" class="form-control" id="updateMechanicCount"
                    placeholder="How many mechanics work in your shop?">
            </div>
            <div class="form-group">
                <label for="updateMechanicEmail">Email</label>
                <input type="email" class="form-control" id="updateMechanicEmail" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="updateMechanicPhone">Phone</label>
                <input type="phone" class="form-control" id="updateMechanicPhone" placeholder="Phone Number">
            </div>
            <div class="form-group">
                <label for="updateMechanicAddress">Address</label>
                <input type="text" class="form-control" id="updateMechanicAddress" placeholder="1234 Main St">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="updateMechanicCity">City</label>
                    <input type="text" class="form-control" id="updateMechanicCity">
                </div>
                <div class="form-group col-md-4">
                    <label for="updateMechanicState">State</label>
                    <select id="updateMechanicState" class="form-control">
                        <option value="0" selected>Choose...</option>
                        <option value="NSW">New South Wales</option>
                        <option value="VIC">Victoria</option>
                        <option value="QLD">Queensland</option>
                        <option value="SA">South Australia</option>
                        <option value="ACT">Australian Capital Territory</option>
                        <option value="TAS">Tasmania</option>
                        <option value="NT">Northern Territory</option>
                        <option value="WA">Western Australia</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="updateMechanicPostcode">Postcode</label>
                    <input type="text" class="form-control" id="updateMechanicPostcode">
                </div>
            </div>
            <h5 align="center">Daily Hours</h5>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Monday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateMonStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateMonEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Tuesday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateTueStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateTueEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Wednesday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateWedStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateWedEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Thursday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateThuStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateThuEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Friday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateFriStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateFriEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Saturday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateSatStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateSatEndHour">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="hourLabel">Friday</p>
                </div>
                <div class="col">
                    <input type="time" class="form-control" id="updateSunStartHour">
                </div>
                <div class="col">
                    <input type="time"  class="form-control" id="updateSunEndHour">
                </div>
            </div>
            <button class="btn btn-primary" id="updateAccountBtn">Update Account</button>
