{{!navbar}}
<div class="brokenDeets">
  <nav class="navbar container-fluid text-center sticky-top">
    <span class="navbar-brand mb-0 h1 col-md-4 offset-md-4">
      <h1>AUTOMENDER</h1>
    </span>
  </nav>
        {{!form}}
        <div class="background">
            <div class="card col-8 offset-2">
                <div class="card-body">
                    <div class="row"></div>
                    <h5 class="card-title">REPAIR REQUEST</h5>
                    <p class="card-text"></p>
                </div>
                <form>
                    <div class="row">
                        <div class="col-5 offset-1">
                            <div class="form-group">
                                <label for="custName">NAME</label>
                                <textarea class="form-control" id="custName"
                                    placeholder="Name as shown on your license"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="emailAddress">EMAIL ADDRESS</label>
                                <input type="email" class="form-control" id="customerEmail"
                                    placeholder="johndoe@emails.com">
                            </div>

                            <div class="form-group">
                                <label for="phoneNumber">PHONE NUMBER</label>
                                <textarea class="form-control" id="customerPhone"
                                    placeholder="Name as shown on your license"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="carMake">CAR MAKE</label>
                                <textarea class="form-control" id="carMake"
                                    placeholder="Eg. Toyota, Honda, Volswagon"></textarea>
                            </div>
                        </div>

                        <div class="col-5">
                            <div class="form-group">
                                <label for="carModel">CAR MODEL</label>
                                <textarea class="form-control" id="carModel"
                                    placeholder="Eg. Sedan, Convertible, SUV"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="licenseNumber">LICENSE PLATE NUMBER</label>
                                <textarea class="form-control" id="licenseNumber"
                                    placeholder="Name as shown on your license"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="serviceRequest">SERVICES NEEDED</label>
                                <textarea class="form-control" id="serviceRequest" rows="2"
                                    placeholder="Name as shown on your license"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="customerNotes">ADDITIONAL NOTES</label>
                                <textarea class="form-control" id="customerNotes" rows="2"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <button class="btn btn-primary formButton">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
</div>