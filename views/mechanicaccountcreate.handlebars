    <div class="row">
        <form class="mt-5 mb-5 mx-auto p-5 clearfix bg-white rounded" action="POST">
            <div class="form-group">
                <label for="mechanicShopName">Shop Name</label>
                <input type="text" class="form-control" id="mechanicShopName"
                    placeholder="What's the name of your shop?">
            </div>
            <div class="form-group">
                <label for="mechanicCount">Number of Mechanics</label>
                <input type="number" class="form-control" id="mechanicCount"
                    placeholder="How many mechanics work in your shop?" value=1 min=1>
            </div>
            <div class="form-group mb-0">
                <label for="mechanicEmail">Email</label>
                <input type="email" class="form-control" id="mechanicEmail" placeholder="Email">
            </div>
            <p id="errorMessageEmail" class="d-none mb-0 mt-2 small text-danger">This username already exists</p>
            <div class="form-group mt-3">
                <label for="mechanicPhone">Phone</label>
                <input type="tel" class="form-control" id="mechanicPhone" placeholder="Phone Number">
